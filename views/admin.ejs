<%- include('header'); -%>

<h1>Admin/<a href="/">*</a></h1>

<div class="row">
  <div class="col s12">
    <table class="table">
      <thead>
        <tr>
          <th width="5%">PV</th>
          <th width="15%">Short</th>
          <th width="70%">Original</th>
          <th width="10%"></th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(linkInfo => { %>
          <tr>
            <td><%= linkInfo.views %></td>
            <td>
              <a href="/<%= linkInfo.short %>">
                <%= linkInfo.short %>
              </a>
            </td>
            <td class="table-cell truncate"><%= linkInfo.original %></td>
            <td>
              <form action="/remove" method="post">
                <input type="hidden" name="short" value=<%= linkInfo.short %>>
                <button class="btn-remove" type="submit" name="remove">
                  Remove
                </button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>

<form action="/logout" method="post">
  <div class="row">
    <button class="btn-large waves-effect waves-light" type="submit" name="action">
      Logout
    </button>
  </div>
</form>

<%- include('footer'); -%>
